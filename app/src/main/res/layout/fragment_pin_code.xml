<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.PinCodeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

        <TextView
                android:text="@string/enter_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pin_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/dot3"
                android:textSize="16sp"
                android:textColor="@color/dark_blue" />

        <ImageView
                android:src="@drawable/baseline_circle_24"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/dot1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/gray"
                android:layout_marginEnd="72dp" />

        <ImageView
                android:src="@drawable/baseline_circle_24"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/dot2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/gray"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/dot1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp" />

        <ImageView
                android:src="@drawable/baseline_circle_24"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/dot3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/gray"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/dot2"
                android:layout_marginStart="8dp" />

        <ImageView
                android:src="@drawable/baseline_circle_24"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/dot4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/gray"
                app:layout_constraintStart_toEndOf="@+id/dot3"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="8dp" />

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dot3"
                app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                <TextView
                        android:text="1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/key1"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/dark_blue"
                        android:background="?android:attr/selectableItemBackground"/>

                <TextView
                        android:text="2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/key2"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/dark_blue"
                        android:background="?android:attr/selectableItemBackground"/>

                <TextView
                        android:text="3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/key3"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/dark_blue"
                        android:background="?android:attr/selectableItemBackground"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                <TextView
                        android:text="4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/key4"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/dark_blue"
                        android:background="?android:attr/selectableItemBackground"/>

                <TextView
                        android:text="5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/key5"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/dark_blue"
                        android:background="?android:attr/selectableItemBackground"/>

                <TextView
                        android:text="6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/key6"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/dark_blue"
                        android:background="?android:attr/selectableItemBackground"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                <TextView
                        android:text="7"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/key7"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/dark_blue"
                        android:background="?android:attr/selectableItemBackground"/>

                <TextView
                        android:text="8"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/key8"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/dark_blue"
                        android:background="?android:attr/selectableItemBackground"/>

                <TextView
                        android:text="9"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/key9"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/dark_blue"
                        android:background="?android:attr/selectableItemBackground"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/textView"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="?android:attr/selectableItemBackground"/>

                <TextView
                        android:text="0"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/key0"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textColor="@color/dark_blue"
                        android:background="?android:attr/selectableItemBackground"/>

                <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/deleteLastButton"
                        android:layout_weight="0"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="⌫"
                        android:textColor="@color/dark_blue"
                        android:background="?android:attr/selectableItemBackground"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>