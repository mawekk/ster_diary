<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="?android:attr/listDivider"
        android:orientation="vertical"
        android:showDividers="middle">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/theme"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:minHeight="48dp"
                android:text="@string/theme_system"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:theme="@style/CheckBox.Theme" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/theme_light"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:theme="@style/CheckBox.Theme" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/theme_dark"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:theme="@style/CheckBox.Theme" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/structure"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_selector"
                android:checked="true"
                android:drawableStart="@android:color/transparent"
                android:drawablePadding="8dp"
                android:minHeight="48dp"
                android:text="@string/discomfort_level"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:theme="@style/CheckBox.Theme" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_selector"
                android:checked="true"
                android:drawableStart="@android:color/transparent"
                android:drawablePadding="8dp"
                android:minHeight="48dp"
                android:text="@string/emotion_evaluation"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:theme="@style/CheckBox.Theme" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_selector"
                android:checked="true"
                android:drawableStart="@android:color/transparent"
                android:drawablePadding="8dp"
                android:minHeight="48dp"
                android:text="@string/feelings"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:theme="@style/CheckBox.Theme" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_selector"
                android:checked="true"
                android:drawableStart="@android:color/transparent"
                android:drawablePadding="8dp"
                android:minHeight="48dp"
                android:text="@string/actions"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:theme="@style/CheckBox.Theme" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_selector"
                android:checked="true"
                android:drawableStart="@android:color/transparent"
                android:drawablePadding="8dp"
                android:minHeight="48dp"
                android:text="@string/answer"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:theme="@style/CheckBox.Theme" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pin_code"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="@string/protect"
                android:textColor="@color/dark_blue"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/export"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:text="@string/export_notes"
                android:textColor="@color/dark_blue"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>